  %% Hex.pm metadata
  {pkg_name, rebar3_lfe},
  {licenses, ["Apache 2.0"]},
  {maintainers, ["Duncan McGreggor"]},
  {links, [
      {"GitHub", "https://github.com/lfe-rebar3/rebar3_lfe"},
      {"Hex", "https://hex.pm/packages/rebar3_lfe"},
      {"LFE", "https://github.com/rvirding/lfe"}
