{application, 'rebar3_lfe',
 [{description, "A comprehensive LFE rebar3 plugin for all your LFE tooling needs"},
  {vsn, "0.4.0-dev"},
  {registered, []},
  {applications, [kernel, stdlib, lfe]},
  {env,[]},
  {modules, [%% support modules
             rebar3_lfe_clean,
             rebar3_lfe_package,
             rebar3_lfe_utils,
             rebar3_lfe_version,
