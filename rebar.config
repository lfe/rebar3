{erl_opts, [debug_info]}.

{deps, [
    {lfe, "~> 2.1"},
    {ltest, "~> 0.13.5"}
]}.

{plugins, [
    {rebar_cmd, "0.4.0"}
]}.

{xref_checks,[
    undefined_function_calls,undefined_functions,locals_not_used,
    deprecated_function_calls,deprecated_functions
]}.

{profiles, [
    {test, [
        {deps, [
            {proper, "1.3.0"}
        ]},
        {plugins, [
            {rebar3_proper, "0.12.1"}
        ]},
        {eunit_opts, [verbose]},
        {erl_opts, [
            {src_dirs, ["src", "test"]}
        ]}
    ]}
]}.

{commands, [
    {clean_all, "rm -rf _build rebar3.lock"},
    {test_all, "rebar3 as test check"}
]}.

{alias, [
    {coverage, [
        {proper, "-c"},
        {cover, "-v --min_coverage=0"}
    ]},
    {check, [
        compile,
        %%xref,
        %%dialyzer,
        eunit,
        coverage
    ]},
    {clean_all, [
        {cmd, "clean_all"}
    ]}
]}.
